</body>
<script>
  
    $("#Button1").click(function () {
        var APIURL = $("#txtAPI").val();
        $.ajax({
            type: "Post",
            url: APIURL,
            data: $("#txtdata").val(),
            contentType: 'application/json',
            dataType: "text",
            success: function (re) {
                alert(re);
            }
        });

    });


</script>
